<!DOCTYPE html>
<html lang="en" >

<head>
  <meta charset="UTF-8">
  <title>Browse</title>
  
  
  <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css'>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
  <link href="/css/profile.css" rel="stylesheet">
  <link href="/css/search.css" rel="stylesheet">
  <link href="/css/index.css" rel="stylesheet">

</head>

<body>

  <!-- Search dropdown overlay --> 
  <div id="search-overlay" class="block">
    <div class="top">
      <div id='search-box'>
        <i id="close-icon-top" class="fa fa-times fa-2x" onclick="hide_overlay()"></i>

        <form action="." method='get' target='_top'>
          <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search categories.." title="Type in a name">
        </form>

        <div>
            {{currentUser.currentCategorySelected}} Categories
        </div>

        <!-- popular categories; shown when search bar is empty -->
        <ul id="popularCategoryUL">
          {{#each currentUsercategoryList}}
            {{#each this}}
                <li><a href="/play/{{id}}">{{title}}</a></li>
            {{/each}}
          {{/each}}
        </ul>


        <!-- all categories; serves as dictionary of all categories when users type. hidden when search bar is empty -->
        <ul id="allCategoryUL">
          {{#each allCategoryList}}
            {{#each this}}
                <li><a href="/play/{{id}}">{{title}}</a></li>
            {{/each}}
          {{/each}}
        </ul>

      </div>
    </div>
  </div>


  <!-- Page content -->
  <div class="page-container">

		<div class="categories-container">
			<div class="content-container">
				<div class="content-Title">
					All Categories
				</div>
				<div id="con-more">
					<div class="content-More more">
						Edit
					</div>
					<div class="content-More more">
						Sort
					</div>

				</div>
			</div>
			<div class="categories-button">

				{{#each allCategoryList}}
				{{#each this}}
					<a href="/play/{{id}}">

						<div id="{{id}}" class="categories">
							{{title}}
						</div>

					</a>
				{{/each}}
				{{/each}}
			</div>

		</div>

    	<div class="nav-cover"></div>

    	<!-- SPACE FOR POPUP -->
		<div id="profile_popup" class="modal"> </div>


		<!-- BOTTOM NAVIGATION BAR -->
		<div class="nav-container">

			<!-- Home -->
			<a href="/">
				<div class="home nav-divider">
					<div class="nav-images">
						<img src="/images/icons/home-100.png" alt="home button">
					</div>
					<div class="nav-title">
						Home
					</div>
				</div>
			</a>

			<!-- Browse -->
			<a href="/browse">
				<div class="browse nav-divider">
					<div class="nav-images">
						<img src="/images/icons/browse-100.png" alt="browse button">
					</div>
					<div class="nav-title">
						Browse
					</div>
				</div>
			</a>

			<!-- Profile -->
		    <a class="profile" onclick="checkLoginStatus( {{currentUser.loginStatus}} )" >
		    	<div class="profile nav-divider">
					<div class="nav-images">
						<img src="/images/icons/profile-100.png" alt="profile button">
					</div>
					<div class="nav-title">
						Profile
					</div>
				</div>
			</a>


      <!-- Search -->
      <a onclick="show_overlay()">
        <div class="search nav-divider">
          <div class="nav-images">
            <img src="/images/icons/search-100.png" alt="search button">
          </div>
          <div class="nav-title">
            Search
          </div>
        </div>
      </a>
    </div>

  </div>

  <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
  <script src="/js/jquery-1.11.0.js"></script>
  <script src="/js/bootstrap.js"></script>
  <script src="/js/profile.js"></script>
  <script src="/js/search.js"></script>

</body>

</html>
