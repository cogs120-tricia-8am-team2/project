<!doctype html>
<html lang="en">

<head>
  <title>APP</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
  <link href="/css/profile.css" rel="stylesheet">
  <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css'>
  <link href="/css/search.css" rel="stylesheet">

</head>

<body>

  <!-- Search dropdown overlay --> 
  <div id="search-overlay" class="block">
    <div class="top">
      <div id='search-box'>
        <i id="close-icon-top" class="fa fa-times fa-2x" onclick="hide_overlay()"></i>

        <form action="." method='get' target='_top'>
          <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search categories.." title="Type in a name">
        </form>

        <div>
            {{currentUser.currentCategorySelected}} Categories
        </div>

        <!-- popular categories; shown when search bar is empty -->
        <ul id="popularCategoryUL">
          {{#each currentUsercategoryList}}
            {{#each this}}
                <li><a href="/play/{{id}}">{{title}}</a></li>
            {{/each}}
          {{/each}}
        </ul>

        <!-- all categories; serves as dictionary of all categories when users type. hidden when search bar is empty -->
        <ul id="allCategoryUL">
          {{#each allCategoryList}}
            {{#each this}}
                <li><a href="/play/{{id}}">{{title}}</a></li>
            {{/each}}
          {{/each}}
        </ul>

      </div>
    </div>
  </div>
  <div class="page-container">
    <div class="heading-container">
      <div class= "profile_pic">
        <img src="/images/icons/default_profile.jpg" alt="profile picture" style="width:130px;height:130px;">
      </div>
      <div class = "description">
        <div class="page-box page-box-padding">
              Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. 
          </div>
        </div>
      <div class = "username">
        <p>{{currentUser.userName}}</p>
      </div>
          <div class= "edit-profile">
            <a href="/">Edit Profile</a>
          </div>
    </div>


    <div class = "tabs_container">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#Saved" data-toggle="tab">Saved</a></li>
        <li><a href="#Uploaded" data-toggle="tab">Uploaded</a></li>
        <li><a href="#Shared" data-toggle="tab">Shared</a></li>
      </ul>
      
      <!-- Tab panes -->
      <div class="tab-content">
          
        <!-- Saved tab -->
        <div class="tab-pane active" id="Saved">
            <h5> <center><br>SAVED CONTENT.. </center></h5>
        </div>

        <!-- Uploaded tab -->
        <div class="tab-pane" id="Uploaded">
            <h5> <center><br>UPLOADED CONTENT.. </center></h5>

        </div>

        <!-- Shared tab -->
        <div class="tab-pane" id="Shared">
            <h5> <center><br>SHARED CONTENT.. </center></h5>

        </div>

      </div>
    </div>





    <!-- BOTTOM NAVIGATION BAR -->
    <div class="nav-container">

      <!-- Home -->
      <a href="/">
        <div class="home nav-divider">
          <div class="nav-images">
            <img src="/images/icons/home-100.png" alt="home button">
          </div>
          <div class="nav-title">
            Home
          </div>
        </div>
      </a>

      <!-- Browse -->
      <a href="/browse">
        <div class="browse nav-divider">
          <div class="nav-images">
            <img src="/images/icons/browse-100.png" alt="browse button">
          </div>
          <div class="nav-title">
            Browse
          </div>
        </div>
      </a>

      <!-- Profile -->
        <a class="profile" href="/profile" >    
          <div class="profile nav-divider">
          <div class="nav-images">
            <img src="/images/icons/profile-100.png" alt="profile button">
          </div>
          <div class="nav-title">
            Profile
          </div>
        </div>
      </a>

      <!-- Search -->
      <a onclick="show_overlay()">
        <div class="search">
          <div class="nav-images">
            <img src="/images/icons/search-100.png" alt="search button">
          </div>
          <div class="nav-title">
            Search
          </div>
        </div>
      </a>
    </div>

  <script src="/js/jquery-1.11.0.js"></script>
  <script src="/js/bootstrap.js"></script>
  <script src="/js/profile.js"></script>
  <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
  <script src="/js/search.js"></script>

</body>

</html>